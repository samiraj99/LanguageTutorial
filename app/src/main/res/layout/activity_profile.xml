<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foslipy.languagetutorial.ProfileActivity">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:background="@android:color/holo_blue_light">

             <ImageView
                 android:layout_marginTop="10dp"
                 android:layout_centerHorizontal="true"
                 android:id="@+id/Profile_image"
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/beginnerslevel"

                 />
             <TextView
                 android:id="@+id/Profile_Image_first_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text=""
                 android:textColor="@android:color/white"
                 android:textSize="20sp"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="170dp"
                 />
         </RelativeLayout>

         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
             <TextView
                 android:id="@+id/text_view_beginners"
                 android:padding="5dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/beginners_progress"
                 android:textSize="20sp"
                 android:textColor="#000"
                 android:layout_marginLeft="10dp"
                 android:layout_marginStart="10dp" />

             <ProgressBar
                 android:id="@+id/Beginners_Progressbar"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/text_view_beginners"
                 android:padding="2dp"
                 />
             <TextView
                 android:id="@+id/text_view_advance"
                 android:padding="5dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/advance_progress"
                 android:textSize="20sp"
                 android:textColor="#000"
                 android:layout_below="@+id/Beginners_Progressbar"
                 android:layout_marginLeft="10dp"
                 android:layout_marginStart="10dp"
                 />

             <ProgressBar
                 android:id="@+id/Advance_Progressbar"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="2dp"
                 android:layout_below="@+id/text_view_advance"
                 />
             <TextView
                 android:id="@+id/text_view_expert"
                 android:layout_below="@+id/Advance_Progressbar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/expert_progress"
                 android:textSize="20sp"
                 android:padding="5dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginStart="10dp"
                 android:textColor="#000"
                 />
                <ProgressBar
                    android:id="@+id/Expert_Progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_below="@+id/text_view_expert"
                    />

            </RelativeLayout>
         </android.support.v7.widget.CardView>
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
             <TextView
                 android:id="@+id/Profile_text_view_acc_detail"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/profile_details"
                 android:textSize="20sp"
                 android:padding="5dp"
                 android:textStyle="normal"
                 android:layout_marginLeft="10dp"
                 android:layout_marginStart="10dp"
                 android:textColor="#000"
                 />
                <Button
                    android:id="@+id/Profile_button_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_edit_black_24dp"
                    android:layout_marginLeft="300dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="6dp"
                    />
             <TextView
                 android:id="@+id/Profile_text_view_email"
                 android:layout_marginTop="40dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/email"
                 android:textSize="17sp"
                 android:padding="5dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginStart="5dp"
                 android:textColor="#000"
                 />
             <TextView
                 android:id="@+id/Profile_email"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/Profile_text_view_acc_detail"
                 android:padding="5dp"
                 android:layout_marginLeft="100dp"
                 android:layout_marginStart="100dp"
                 android:textSize="17sp"
                 android:text=""
                 />
                <TextView
                    android:id="@+id/Profile_text_view_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Profile_text_view_email"
                    android:padding="5dp"
                    android:text="@string/first_name"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/Profile_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_text_view_email"
                    android:padding="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:textSize="17sp"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/Profile_text_view_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Profile_text_view_first_name"
                    android:padding="5dp"
                    android:text="@string/last_name"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/Profile_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_text_view_first_name"
                    android:padding="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:textSize="17sp"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/Profile_text_view_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Profile_text_view_last_name"
                    android:padding="5dp"
                    android:text="@string/occupation"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/Profile_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Profile_text_view_last_name"
                    android:padding="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:textSize="17sp"
                    android:text=""
                    />

            </RelativeLayout>

         </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
